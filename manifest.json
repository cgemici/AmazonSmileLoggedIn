{
  "name": "Amazon Smile (when logged in)",
  "version": "1.0",
  "description": "Redirect Amazon requests to smile subdomain",
  "permissions": ["webRequest", "webRequestBlocking", "cookies",
    "https://www.amazon.com/*", "https://www.amazon.co.uk/*", "https://www.amazon.de/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "icons": {
  "48": "amz48.png"
  },
  "manifest_version": 2
}